<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="me.eddiehsu.sixthsensebelt.ModeBeaconActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Beacon Mode"
        android:id="@+id/textView4" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_button_height"
        android:text="Broadcast Location"
        android:textSize="@dimen/activity_main_button_text_size"
        android:onClick="startBroadcastButtonHandler"
        android:id="@+id/beacon_button_start" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_main_button_height"
        android:text="Stop Broadcasting"
        android:textSize="@dimen/activity_main_button_text_size"
        android:onClick="stopBroadcastButtonHandler"
        android:id="@+id/beacon_button_stop" />

</LinearLayout>
